const VRAM_TILE_BLOCK_2 = $9000;
const VRAM_TILE_MAP_0 = $9800;
const NR52 = $FF26;
const LCDC = $FF40;
const LY = $FF44;
const BGP = $FF47;

static tilemap [rom0] = raw_bytes!();

section main [rom0] {
    // shut down audio
    ld a, 0;
    ld [NR52], a;

    // wait for vblank to turn off the display
  1:
    ld a, [LY];
    cp a, 144;
    jp cy, 1b;
  1:
    jp 1b;
}
